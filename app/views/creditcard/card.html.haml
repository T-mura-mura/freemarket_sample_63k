= render "items/hedder"  
.main
  .content2
    .pay-info
      .pay-info__text
        %p 支払い方法
      .pay-info__cards-info
        .bottom-border
          %section.cards-list
            .cards-list__text
              %p クレジットカード一覧
            .cards-list__info
            - if @default_card_information.blank?
              = form_tag(creditcard_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
                %button.remove 登録する    
            - else
              = "**** **** **** " + @default_card_information.last4
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
              %section
                .cards-list__info
                  <img src="//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1855818912" width="49" height="15" alt="visa"> 
                = form_tag(delete_creditcard_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
                  %button.remove 削除する           
        .about-pay
          %span 支払い方法について
          = fa_icon "angle-right"
    = render "users/l-side"  
.footer
  = render 'items/footer'           



       