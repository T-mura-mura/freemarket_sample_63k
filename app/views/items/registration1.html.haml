.container
  = render partial: 'header'

  .main
    .main__header
      新規会員登録
    .main__how-to-register
      = link_to 'email', {data: {"turbolinks": false}} do
        .main__how-to-register__email
          = icon('far', 'envelope')
          メールアドレスで登録する
      = link_to 'facebook', {data: {"turbolinks": false}} do
        .main__how-to-register__facebook
          = icon('fab', 'facebook-square')
          facebookで登録する
      = link_to 'google', {data: {"turbolinks": false}} do
        .main__how-to-register__google
          = icon('fab', 'google')
          googleで登録する

  = render partial: 'footer'