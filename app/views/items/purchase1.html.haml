= render "header"
.main
  .purchase
    .purchase__title
      購入内容の確認
    .purchase__item
      %figure
        - @item.images.each do |image|
          = image_tag image , size: "200x200"
      .purchase__item-name
        %p 
        = @item.name
      .price
        %p
        = @item.price.to_s.gsub(/(\d)(?=(\d{3})+(?!\d))/, '\1,')
        %p (送料込み)
      .point2
        %div 
          = link_to "#" do
            ポイントはありません
      .money
        %p 支払金額
        %p 
        = @item.price.to_s.gsub(/(\d)(?=(\d{3})+(?!\d))/, '\1,')
      - if @default_card_information.blank?
        %h5 配送先と支払方法の入力を完了して下さい
      -else 
        %div 
        = form_tag( pay_item_path, method: :post,class: "point3") do
          %button 購入する
    .delivery
      .delivery__box
        %ul
          %li 配送先
          %li 
            = @current_user.address.post_number
          %li 
            = @current_user.address.prefecture     
            = @current_user.address.city
            = @current_user.address.address
            = @current_user.address.building
          %li 
            = @current_user.last_name
            = @current_user.first_name    
          %li
            = link_to "#" do
              変更する
              = fa_icon 'angle-right'
    .delivery
      .delivery__box
        %ul
          %li 支払方法
          - if @default_card_information.blank?
            %br /
            %li
              = link_to card_creditcard_path(@current_user.id) do
                変更する
                = fa_icon 'angle-right'            
          - else
            -#以下カード情報を表示
            = "**** **** **** " + @default_card_information.last4
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
            %section
              .cards-list__info
                = image_tag("//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1855818912",width: "49",alt:"visa",height:"15")
            %li
              = link_to card_creditcard_path(@current_user.id) do
                変更する
                = fa_icon 'angle-right'


= render "footer2"
              


