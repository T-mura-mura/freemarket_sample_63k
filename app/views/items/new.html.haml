  .main
    %section.main__container
      #sell-container
        .data-reactroot
          .sell-container
            %h2.sell-container__text 商品の情報を入力
            .sell-form
              = form_for "#", html: {class: "sell-upload-box"} do |f|
                %span.sell-upload-head 出品画像 
                %span.form-require 必須
                %p 最大10枚までアップロードできます
                .sell-dropbox-container-number10
                  .sell-upload-items-container
                    .items-have-item-0
                      %ul
                %label.dropbox-have-item-0
                  = f.file_field :image, class: "hidden"
                  %p.visible-pc ドラッグアンドドロップ  
                  %p.also-visible-pc またはクリックしてファイルファイルをアップロード
                  %i.icon-camera
              
            .sell-content
              .form-group
                %label 商品名
                %span 必須
                = form_for "#", html: {class: "form-name"} do |f|
                  = f.text_field :name, class: "field-name", placeholder: "商品名(必須 40文字まで)"
              .form-group
                %label 商品の説明
                %span 必須
                = form_for "#", html: {class: "form-description"} do |f|
                  = f.text_area :description, class: "field-description", row: "5", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
            
            .sell-details
              %h3.detail-text 商品の詳細
              .sell-form-box
                .form-group
                  %label カテゴリー
                  %span 必須
                  = form_for "#", html: {class: "category"} do |f|
                    = f.select :ancestry, ["---","レディース","メンズ","ベビー・キッズ"]
                  = form_for "#", html: {class: "category1"} do |f|
                    = f.select :ancestry, ["---",1,2,3,4,5,6]
                  = form_for "#", html: {class: "category2"} do |f|
                    = f.select :ancestry, ["---",1,2,3,4,5,6]
                .form-group
                  %label サイズ
                  %span 必須
                  = form_for "#", html: {class: "size"} do |f|
                    = f.select :size, ["---","aaa","ss","www","eeee",6]
                .form-group
                  %label ブランド
                  %span.option 任意
                  = form_for "#", html: {class: "brand"} do |f|
                    = f.text_field :name, placeholder: "    例） シャネル", class: "brand-form"
                .form-group
                  %label 商品の状態
                  %span 必須
                  = form_for "#", html: {class: "detail"} do |f|
                    = f.select :size, ["---","aaa","ss","www","eeee",6]
            
            .sell-delivery
              %h3.delivery-text 配送について
              = link_to "#", class: "question" do
                = fa_icon "question-circle", class: "icon"
              .delivery-form-box
                .form-group
                  %label 配送料の負担
                  %span 必須
                  = form_for "#", html: {class: "postage"} do |f|
                    = f.select :postage, ["---",1,2,3,4,5,6]
                .form-group
                  .after-selected-postage
                    %label 配送の方法
                    %span 必須
                    = form_for "#", html: {class: "delivery-method"} do |f|
                      = f.select :method, ["---",1,2,3,4,5,6]
                .form-group
                  %label 発送元の地域
                  %span 必須
                  = form_for "#", html: {class: "delivery-region"} do |f|
                    = f.select :prefecture, ["---",1,2,3,4,5,6]
                .form-group
                  %label 発送までの日数
                  %span 必須
                  = form_for "#", html: {class: "delivery-days"} do |f|
                    = f.select :days, ["---",1,2,3,4,5,6]
            
            .sell-cost
              %h3.cost-text 販売価格(300〜9,999,999)
              = link_to "#", class: "question" do
                = fa_icon "question-circle", class: "icon"
              .cost-form-box
                %ul.sell-price
                  %li.form-group
                    .cost-text
                      %label 価格
                      %span 必須
                      .cost 
                        %p ¥
                        = form_for "#", html: {class: "form-cost"} do |f|
                          = f.text_field :price, class: "field-cost", placeholder: "例）300"
                  %li.form-group
                    %p.fee-text 販売手数料(10%)
                    %span.hyphen -
                  %li.form-group
                    %p.profit-text 販売利益
                    %span.hyphen-bold -
            
            .sell-btn
              %p.row
                %span.blue 禁止されている出品
                %span 、
                %span.blue 行為
                %span を必ずご確認ください。
              %p.row
                %span またブランド品でシリアルナンバー等がある場合はご記載ください。
                %span.blue 偽ブランドの販売
                %span は犯罪であり処罰される可能性があります。
              %p.row
                %span また、出品をもちまして
                %span.blue 加盟店規約
                %span に同意したことになります。
              .submit
                %button.submit-btn 出品する
              .back
                %button.back-btn もどる


