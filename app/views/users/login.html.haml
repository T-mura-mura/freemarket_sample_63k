.container-k
  = render partial: 'layouts/shared/header'

  .main-k
    .main-k__no-account
      %p.main-k__no-account__text
        アカウントをお持ちでない方はこちら
      = link_to user_add_users_path, {data: {"turbolinks": false}} do
        .main-k__no-account__btn
          新規会員登録
    .main-k__sns-login
      = link_to 'Facebook', {data: {"turbolinks": false}} do
        .main-k__sns-login__facebook
          = fa_icon 'facebook-square'
          Facebookでログイン
      = link_to 'Google', {data: {"turbolinks": false}} do
        .main-k__sns-login__google
          = fa_icon 'google'
          Googleでログイン
    = form_for @user, url: logging_in_users_path, method: :post, html: {class: "main-k__email-pass-form"} do |f|
      = f.email_field :email, class: 'main-k__email-pass-form__email', placeholder: 'メールアドレス'
      = f.password_field :password, class: 'main-k__email-pass-form__password', placeholder: 'パスワード'
      .g-recaptcha{data: {sitekey: "6Lcl18QUAAAAAEvLZDKaF45DAa_dBjcAUjkJDI2l"}}
      = f.submit 'ログイン', class: 'main-k__email-pass-form__btn'
      .main-k__email-pass-form__forgot-password
        パスワードをお忘れの方
        
  = render partial: 'layouts/shared/footer'